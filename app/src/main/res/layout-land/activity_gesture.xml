<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <!-- Top Fragment for Red Ball that Moves with Gestures -->
    <fragment
        android:id="@+id/topFragment"
        android:name="com.example.project10.TopFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:tag="TopFragment" />

    <!-- Bottom Fragment for Logging Activities -->
    <fragment
        android:id="@+id/bottomFragment"
        android:name="com.example.project10.BottomFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:tag="BottomFragment" />

</LinearLayout>
